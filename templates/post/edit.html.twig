{% extends 'base.html.twig' %}

{% block title %}
    {% if (post.title is null) %}
    New post
    {% else %}
    Editing {{ post.title }}
    {% endif %}
{% endblock %}

{% block body %}
<div class="post">
    {{ form_start(form) }}
    <input type="submit" value="submit">
    {{ form_end(form) }}
</div>
{% endblock %}
